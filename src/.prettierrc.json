{
    "plugins": ["@prettier/plugin-php", "prettier-plugin-blade"],
    "tabWidth": 4,
    "useTabs": false,
    "singleQuote": true,
    "printWidth": 100,
    "overrides": [
        {
            "files": "**/*.blade.php",
            "options": {
                "parser": "blade"
            }
        },
        {
            "files": ["**/*.php"],
            "options": {
                "parser": "php"
            }
        }
    ]
}
