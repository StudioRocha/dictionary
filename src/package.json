{
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "format": "prettier --write \"resources/**/*.blade.php\" \"resources/**/*.{js,ts,css,scss}\" \"public/css/**/*.{css,scss}\"",
        "format:check": "prettier --check \"resources/**/*.blade.php\" \"resources/**/*.{js,ts,css,scss}\" \"public/css/**/*.{css,scss}\""
    },
    "devDependencies": {
        "axios": "^0.21",
        "laravel-mix": "^6.0.6",
        "lodash": "^4.17.19",
        "postcss": "^8.1.14",
        "@prettier/plugin-php": "^0.22.0",
        "prettier": "^3.3.3",
        "prettier-plugin-blade": "^1.8.6"
    }
}
